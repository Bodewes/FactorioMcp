{
  "name": "factorio-mcp",
  "version": "0.1.0",
  "description": "MCP server for communicating with Factorio via RCON protocol",
  "author": "Bodewes",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "dev": "node --loader ts-node/esm src/index.ts",
    "start": "node dist/index.js",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\" \"*.json\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\" \"*.json\"",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "clean": "rm -rf dist coverage .turbo .next",
    "precommit": "npm run lint && npm run type-check"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.0",
    "dotenv": "^16.3.1",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "rcon-srcds": "^1.0.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@eslint/js": "^8.55.0",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "@vitest/coverage-v8": "^1.1.0",
    "eslint": "^8.55.0",
    "prettier": "^3.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "mcp",
    "factorio",
    "rcon",
    "model-context-protocol",
    "ai-assistant",
    "claude"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Bodewes/FactorioMcp.git"
  },
  "bugs": {
    "url": "https://github.com/Bodewes/FactorioMcp/issues"
  },
  "homepage": "https://github.com/Bodewes/FactorioMcp#readme"
}
